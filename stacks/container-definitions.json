[
  {
    "command": ["poetry", "run", "start"],
    "essential": true,
    "image": "{{image-url}}",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "{{log-group}}",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "ecs",
        "awslogs-create-group": "true"
      }
    },
    "name": "ecs-fargate-app",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "value": "{{database-host}}",
        "name": "DATABASE_HOST"
      },
      {
        "value": "{{database-port}}",
        "name": "DATABASE_PORT"
      },
      {
        "value": "{{database-user}}",
        "name": "DATABASE_USER"
      },
      {
        "value": "{{database-password}}",
        "name": "DATABASE_PASSWORD"
      },
      {
        "value": "{{database-schema}}",
        "name": "DATABASE_SCHEMA"
      }
    ]
  }
]
